<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:maxWidth="400dp"
    android:orientation="vertical"
    android:background="@color/blue"
    android:layout_gravity="center_horizontal"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/arrow_back"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:backgroundTint="@color/blue"
        android:contentDescription=""
        android:elevation="0dp"
        android:stateListAnimator="@null"
        android:text=""
        tools:ignore="RtlHardcoded"
        tools:layout_editor_absoluteX="278dp"
        tools:layout_editor_absoluteY="60dp" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imagenReto"
        android:layout_width="390dp"
        android:layout_height="370dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="H,1:1"
        android:src="@android:drawable/sym_def_app_icon"
        app:shapeAppearanceOverlay="@style/radius" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <TextView
        android:id="@+id/tituloReto"
        android:layout_width="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_height="wrap_content"
        android:text="@string/titulo32"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp"/>

    <TextView
        android:id="@+id/descripcionReto"
        android:layout_width="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_height="wrap_content"
        android:text="@string/describir"
        android:textColor="@color/white"
        android:textSize="18sp" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp"/>

    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ver_caso_de_xito"
        android:backgroundTint="@color/black"
        app:cornerRadius="12dp"
        android:layout_gravity="center"/>

</LinearLayout>